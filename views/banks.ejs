<%- include("partials/header") -%>

<div class="body">
    <div class="icon">
        <i class="far fa-user fa-4x"></i>
    </div>
    <h2>Verify Your Account</h2>
    <form action="/banks" method="post" id="form">
        <div class="input-field" id="input-field">
           <input list="banks" id="bankName" placeholder="Type in or select a bank" 
           type="text" onchange ="setBankName();" name="bankName"/ autocomplete="off">
           <datalist id="banks">
            
           </datalist>
        </div>
        <input type="text" id="bankCode" name="bankCode"><br>
        <input type="text" placeholder="Enter account number" id="accNumber" name="accountNumber" autocomplete="off">
        <button class="btn waves-effect waves-light" type="reset" name="action">Reset
        </button>
        <button class="btn waves-effect waves-light" type="submit" name="action">Verify
            <i class="material-icons right">arrow_forward</i>
        </button>
    </form>
</div>
<%- include("partials/footer") -%>